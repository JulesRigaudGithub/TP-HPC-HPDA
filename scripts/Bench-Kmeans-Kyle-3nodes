#!/bin/bash
#SBATCH --time=4
#SBATCH --output=output/result-3nodes.csv

# The line SBATCH --time=4 means: max exec time of the batch is 4 minutes
# When developping and debuging: use small test and small time limits
# After you can sublit Batch with 15, 30, 60, 120 minutes

source /etc/profile

for ((i=0; i<5; i++)); do
    module load py-mpi4py/3.1.4/gcc-12.3.0-openmpi


    echo -n "3, 1E4, "
    /usr/bin/mpirun -np 48 -map-by ppr:16:node:PE=1 -rank-by core python3 kmeans ../Data-for-Benchmark/META_DATA_S1_1E4.txt
    echo -n "3, 1E5, "
    /usr/bin/mpirun -np 48 -map-by ppr:16:node:PE=1 -rank-by core python3 kmeans ../Data-for-Benchmark/META_DATA_S1_1E5.txt
    echo -n "3, 1E6, "
    /usr/bin/mpirun -np 48 -map-by ppr:16:node:PE=1 -rank-by core python3 kmeans ../Data-for-Benchmark/META_DATA_S1_1E6.txt
done